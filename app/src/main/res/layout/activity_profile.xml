<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/AccountInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Information"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="10pt"
        android:fontFamily="times new roman"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fullNameBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:layout_below="@+id/AccountInfoText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="7pt"
        android:fontFamily="times new roman"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fullNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AccountInfoText"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/fullNameBar"
        android:fontFamily="times new roman"
        android:text="fn"
        android:textSize="6pt"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/emailBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address:"
        android:layout_below="@id/fullNameBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="7pt"
        android:fontFamily="times new roman"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/emailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullNameField"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/emailBar"
        android:fontFamily="times new roman"
        android:text="email"
        android:textSize="6pt"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/contactBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number:"
        android:layout_below="@id/emailBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="7pt"
        android:fontFamily="times new roman"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/contactField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailField"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/contactBar"
        android:fontFamily="times new roman"
        android:text="cn"
        android:textSize="6pt"
        android:textStyle="italic" />


    <Button
        android:id="@+id/viewProductBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="my_products"

        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="My products" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Logout"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/viewProductBtn"
        android:layout_centerHorizontal="true"

        android:paddingLeft="40dp"
        android:paddingRight="40dp"/>







</RelativeLayout>